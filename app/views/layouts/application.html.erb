<!DOCTYPE html >
  <html>
  <head>
    <title>Tim</title>
    <%= csrf_meta_tags %>
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css"
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.js"

  </head>

  <body>

      <nav class="navbar navbar-inverse navbar-fixed-top"  role="navigation">
          <div class="container-fluid">
              <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand" href="#myPage">Строй Материалы в Москве</a>
              </div>
              <div class="collapse navbar-collapse" id="myNavbar">
                  <ul class="nav navbar-nav navbar-right">
                    <% if admin_signed_in? and current_admin.admin == true %>
                      <li><%= link_to 'Админстратор', rails_admin_path %></li>
                    <% end %>
                    <li><%= link_to "Магазин", items_path %></li>
                    <li><a href="#band">BAND</a></li>
                    <li><a href="#tour">Заказать</a></li>
                    <li><a href="#contact">Контакт</a></li>
                    <li>
                      <% if current_admin %>
                        <%= link_to "Добавить продукт", new_item_path %>
                      <% end %>
                    </li>
                    <li>
                      <% if current_admin %>
                        <%= link_to "Выйти", destroy_admin_session_path, method: :delete %>
                      <% else %>
                        <%= link_to "Логин", new_admin_session_path %>
                      <% end %>
                    </li>
                    <!-- <% if current_admin %> -->
                      <li>
                        <%= link_to cart_path do%>
                          <i class="fi-shopping-cart"></i>
                          My Cart
                          (<span id="cartcount" class="cart-count"><%= current_admin.cart_count %></span>)
                        <%end%>
                      </li>
                    <!-- <% end %> -->
                  </ul>
              </div>
          </div>
      </nav>

    <%= yield %>

    <footer class="footer">
        <div class="text-center">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-google-plus"></i></a>
            <a href="#"><i class="fa fa-skype"></i></a>
        </div><!--End container-->
    </footer><!--End footer 2-->

  </body>
</html>
