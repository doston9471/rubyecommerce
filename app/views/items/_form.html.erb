<div class="jumbotron">
	<div class="container">
			<%= form_for(@item, html: {class: "form-horizontal", id:"newproductid", multipart: true }) do |f|  %>
				<div class="form-group small">
					<%= f.label :name %>
					<%= f.text_field :name ,class:"form-control"%>
				</div>
				<div class="form-group small">
					<%= f.label :price %>
					<%= f.text_field :price, class:"form-control" %>
				</div>
				<div class="form-group small">
					<%= f.label :num %>
					<%= f.text_field :num , class:"form-control"%>
				</div>
				<div class="form-group">
					<%= f.label :description %>
					<%= f.cktext_area :description, rows: 10, class:"form-control"%>
				</div>
				<div class="form-group small">
					<span class="picture">
						<%= f.file_field :image %>
					</span>
				</div>
				<div class="form-group small">
					<%= f.submit(@item.new_record? ? 'Create Item' : 'Edit Item', class: "btn btn-success") %>
				</div>
			<% end %>
		<hr/>
	</div>
</div>
